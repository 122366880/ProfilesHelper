<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:id="@+id/schedule_scroll_list"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
    	>
    	
    	<!-- action bar of this fragment -->
		<LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
	        android:orientation="horizontal"
			android:baselineAligned="false"       
	        android:gravity="center_horizontal"
	        android:background="#FF7F00"
	        >
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            android:gravity="center">
	            
	        <ImageButton 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/schedule_res_4"
	            android:onClick="schedule_list_mode"
	            />
	        </LinearLayout>
	          <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            android:gravity="center"
	            >
	        <ImageButton 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/schedule_res_3"
	            android:onClick="schedule_calendar_mode"
	            />
	        </LinearLayout>
	        
	          <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            android:gravity="center"
	            >
	        <ImageButton 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/schedule_res_5"
	            android:onClick="schedule_grid_mode"
	            />
	        </LinearLayout>
	        
	          <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            android:gravity="center"
	            >
	        <ImageButton 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/schedule_res_2"
	            android:onClick="schedule_add_alert"
	            />
	        </LinearLayout>
       
    </LinearLayout>

	
	<LinearLayout 
	    android:id="@+id/schedule_content_parent"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    
	</LinearLayout>
   
</LinearLayout>
